@model NewEnglandBeerMapApplication.Models.CraftBreweries

@{
    ViewBag.Title = "Create";
}

<h3>Add Brewery</h3>
<div class="row">
    <div class="col-md-8">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true)
                <div class="form-group">
                    @Html.LabelFor(model => model.BreweryName, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.BreweryName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.BreweryName)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.BreweryAddress, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.BreweryAddress, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.BreweryAddress)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.BreweryCity, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.BreweryCity, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.BreweryCity)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.BreweryState, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("BreweryState", ViewBag.BreweryState as SelectList, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.BreweryState)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.BreweryZipCode, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.BreweryZipCode, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.BreweryZipCode)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.BreweryWebsite, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.BreweryWebsite, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.BreweryWebsite)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
</div>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
