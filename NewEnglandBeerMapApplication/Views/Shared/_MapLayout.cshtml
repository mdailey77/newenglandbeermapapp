<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>@ViewBag.Title</title>
        <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Roboto+Slab" rel="stylesheet">
        @Styles.Render("~/Content/cssbundle")
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAahobLr739sf4X4vqABpPveebdQRBIFMw"></script> 
        @Scripts.Render("~/bundles/angularbundle")
        @Scripts.Render("~/bundles/googleanalytics")
        <script src='https://www.google.com/recaptcha/api.js?onload=vcRecaptchaApiLoaded&render=explicit' async defer></script>  
    </head>
    <body ng-app="NEBreweryMapApp">
        <div class="container-fluid body-content">
            @RenderBody()
        </div>
        @Scripts.Render("~/bundles/jquerybundle")
        @Scripts.Render("~/bundles/bootstrapbundle")        
        @RenderSection("scripts", required: false)
    </body>
</html>
